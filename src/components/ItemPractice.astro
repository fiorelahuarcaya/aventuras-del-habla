---
import "../css/base.css";
import Starts from "./svgs/starts.astro";

export interface Props {
  title_practice: string | null;
  description_practice: string | null;
  id_evaluation: number | null;
}

const { title_practice, description_practice, id_evaluation } = Astro.props;
---

<div class="item-practice">
  <div class="starts">
    <Starts />
  </div>
  <div class="text">
    <h3>{title_practice}</h3>
    <div class="descrption">
      {description_practice}

      <a href={"/practice/" + id_evaluation} class="btn">Iniciar</a>
    </div>
  </div>
</div>

<style>
  .item-practice {
    position: relative;
  }
  .item-practice .starts {
    position: absolute;
    right: 0;
    z-index: 0;
  }

  .item-practice {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 2rem 2.5rem;
    gap: 1.5rem;
    width: 480px;

    color: var(--background);
    background-color: var(--primary-500);
    border-radius: 1rem;
  }

  .item-practice .text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    width: 100%;
  }

  .item-practice .text .descrption {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .text .descrption .btn {
    padding: 0.25rem 1rem;
    border-radius: 0.5rem;
    color: var(--primary-600);
    background-color: var(--background);
    z-index: 10;
  }
</style>
