---
import "../css/form.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import FormRegister from "../components/register/FormRegister.svelte";
import MenuIndex from "../components/info/MenuIndex.astro";
---

<BaseLayout title="Login">
  <MenuIndex />
  <FormRegister client:load />
</BaseLayout>

<style>
  :global(html, body) {
    height: 100%;
  }

  :global(body) {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--Sky, #e1f8ff);
    background-image: url("/img/background-register.png");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 375px) {
    :global(body) {
      background: var(--background, #ffffff);
      background-image: url("/img/background-register-light.png");
    }
  }
</style>
