---
import SidebarMenu from "../components/SidebarMenu.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <main>
    <SidebarMenu />
    <slot />
  </main>
</BaseLayout>

<style>
  main {
    display: flex;
    flex-direction: row;
    min-width: 100%;
    min-height: 100vh;
  }
</style>
